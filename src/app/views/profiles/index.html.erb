<h1>Profiles#index</h1>

<%= search_form_for @search do |f| %>

 Pace: <%= f.select(:pace_eq, options_for_select([
 ["< 3min/km", "< 3min/km"], ["3-4min/km", "3-4min/km"], ["4-5min/km", "4-5min/km"], ["5-6min/km", "5-6min/km"],
 ["6-7min/km", "6-7min/km"], ["7-8min/km", "7-8min/km"], ["8-9min/km", "8-9min/km"], ["9-10min/km", "9-10min/km"],
 ["walking", "walking"]]), {include_blank: true}) %>
 <% f.collection_select :pace_eq, Profile.all, :id, :pace, include_blank: true %>
 <% f.collection_select :gender_eq, Profile.all, :id, :gender, include_blank: true %>
 Gender: <%= f.select(:gender_eq, options_for_select([['male', 'male'], ["female", "female"]]), {include_blank: true}) %>

    <%= f.submit "Search" %>

<% end %>


