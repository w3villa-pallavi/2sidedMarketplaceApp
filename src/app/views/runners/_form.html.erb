<%= form_with(model: runner, local: true) do |f| %>

<%= f.fields_for :profile do |f| %>
<div>
    <%= f.label :username %>
    <%= f.text_field :username %>
</div>

<div>
    <%= f.label :age %>
    <%= f.select :age, Runner::AGE_RANGE %>
</div>

<div>
    <%= f.label :gender %>
    <%= f.select :gender, Runner::GENDER_OPTIONS %>
</div>
<div>
    <%= f.label :pace %>
    <%= f.select :pace, Runner::TRAINING_PACE_LIST %>
</div>

<% end %>
<div>
    <%= f.submit %>
</div>

<% end %>